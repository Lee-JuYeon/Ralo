<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="title"
            type="String" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/popup_title"
            android:text="@{title}"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/ralo"
            android:gravity="center"
            android:background="@drawable/background_popuptop">
        </TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/popup_dismiss"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:cardBackgroundColor="@color/window_red"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_title"
            android:background="@drawable/background_popupbottom"
            android:id="@+id/container">
            <com.github.mmin18.widget.RealtimeBlurView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/end"
                android:id="@+id/blur"
                app:realtimeBlurRadius="20dp"
                app:realtimeOverlayColor="#80FFFFFF"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/selfie"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_vendetta"
                android:contentDescription="@string/image_loading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/selfie"
                android:layout_marginStart="10dp"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/scheherazade_bold"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/selfie"
                android:layout_below="@id/name"
                android:layout_marginStart="10dp"
                android:id="@+id/age"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selfie"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:id="@+id/description"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_normal"
                android:gravity="start|top"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_below="@id/description"
                android:orientation="vertical"
                android:id="@+id/end"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>